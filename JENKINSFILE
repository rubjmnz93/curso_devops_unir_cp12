pipeline {
    agent any
    
    environment {
        PYTHONPATH = "${WORKSPACE}"
        FLASK_APP  = "app/api.py"
    }

     stages {
        stage('Get Code') {
            steps {
                // Obtener c칩digo del repo
                git 'https://github.com/rubjmnz93/curso_devops_unir_cp12.git'
                sh 'ls -l'
                echo WORKSPACE
            }
        }
        
        stage('Tests')
        /// Stage para lanzar las pruebas unitarias y de integraci칩n paralelamente
        {
            parallel
            {
                /// Stage de lanzar las prueba unitarias
                stage('Unit') {
                            steps {
                                /// Aunque los tests fallen, el stage se marca en verde
                                catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                                    sh '''                                        
                                        echo "Executing unittests"
                                        coverage run --branch --source=app --omit=app/__init__.py,app/api.py -m pytest --junitxml=result-unit.xml test/unit
                                    '''
                                    junit 'result-unit.xml' 
                                }
                            }
                }
                
                        
                stage('Rest') {
                    /// Stage de lanzar las prueba de integraci칩n
                    steps {
                        /// Aunque los tests fallen, el stage se marca en verde
                        catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                            sh '''
                                echo "Executing REST tests"
                                flask run &
                                java -jar ~/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock &
                                
                                # 10 reintentos para ver si wiremock est치 levantado
                                for i in $(seq 1 10); do
                                  nc -z localhost 9090 && break
                                  echo "Waiting for WireMock... try $i/10"
                                  sleep 1
                                done || {
                                  echo "WireMock not available"
                                  exit 1
                                }
                                
                                pytest --junitxml=result-rest.xml test/rest
                            '''
                            junit 'result-rest.xml'
                        }
                    }
                }        
            }
        }
        stage("Coverage") {
            /// Stage con las pruebas de cobertura
            steps {
                sh '''
                    export PYTHONPATH=$WORKSPACE
                    coverage xml
                '''
                recordCoverage qualityGates: [[criticality: 'NOTE', integerThreshold: 95, metric: 'LINE', threshold: 95.0], [criticality: 'ERROR', integerThreshold: 85, metric: 'LINE', threshold: 85.0], [criticality: 'ERROR', integerThreshold: 80, metric: 'BRANCH', threshold: 80.0], [criticality: 'NOTE', integerThreshold: 90, metric: 'BRANCH', threshold: 90.0]], tools: [[parser: 'COBERTURA', pattern: 'coverage.xml']]
            }
        }
     }
}